        <br>
        <div class="centerSet">
          <div class="">
            <span style="font-size:40px;" class="fa-stack fa-lg">
              <i class="fa fa-circle fa-stack-2x"></i>
              <i class="fa fa-edit fa-stack-1x fa-inverse"></i>
              <br>
              <br><br>
            </span>
            <div style="    font-size: 20px;  font-weight: bold;  color: rgba(203, 54, 54, 0.71);">
              Modify Event

            </div>
            <div class="" style="font-size: 15px; color: #6c757d;">
              Use the form below to modify the event
            </div>
          </div>


        </div>
        <hr style="width: 1300px;">

          <div class="background" style="margin-left:50px">
            <div class="marginSet">
              <form method="POST" id="formAdjust">
              <div class="form-row">
                <div class="col-md-4 mb-3">
                  <label for="validationDefault01">Event name</label>
                  <input type="text" class="form-control" id="nameA" name="nameA" value="<%= todos.name %>" required>
                </div>
              </div>
              <div class="form-row">
                <div class="col-md-8 mb-3">
                  <div class="form-group">
                    <label for="exampleFormControlTextarea1">Event Description</label>
                    <textarea class="form-control" id="desA" name="desA"><%= todos.des %></textarea>
                  </div>
                </div>

              </div>
              <div class="form-row">
                <div class="col-md-4 mb-3">
                  <label for="validationDefault03">Date</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <div class="input-group-text"><i class="fas fa-calendar-alt"></i></div>
                    </div>
                    <input style="background-color: white;" type="text" class="form-control" id="dateA" name="dateA" data-date="<%= todos.date.toLocaleDateString("en-US") %>" required>
                  </div>

                </div>
                <div class="col-md-2 mb-3">
                  <label for="validationDefault04">Start Time</label>
                  <input type="text" class="form-control" id="startA" name="startA" value="<%= todos.start %>" pattern="^([0-1]{1}[0-9]{1}|20|21|22|23):[0-5]{1}[0-9]{1}$" title="Input should have the format hh:mm !"  required>
                </div>
                <div class="col-md-2 mb-3">
                  <label for="validationDefault04">End Time</label>
                  <input type="text" class="form-control" id="endA" name="endA" value="<%= todos.end %>" pattern="^([0-1]{1}[0-9]{1}|20|21|22|23):[0-5]{1}[0-9]{1}$" title="Input should have the format hh:mm !" required>
              </div>
            </div>
              <div class="form-row">
                <div class="col-md-3 mb-3">
                  <label for="validationDefault03">Capcity</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <div class="input-group-text"><i class="fas fa-male"></i></div>
                    </div>
                    <input type="number" class="form-control" id="maxA" name="maxA" value="<%= todos.max %>" required>
                  </div>
                </div>
                <div class="col-md-4 mb-3">
                  <label for="validationDefault04">Address</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <div class="input-group-text"><i class="fas fa-map-marker-alt"></i></div>
                    </div>
                    <input type="text" class="form-control" id="addressA" name="addressA" value="<%= todos.address %>" required>
                  </div>
                </div>
            </div>
            <div class="form-row">
              <div class="col-md-3 mb-3">
                <label for="validationDefault04">Ticket Price</label>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-dollar-sign"></i></div>
                  </div>
                  <input type="number" class="form-control" id="priceA" name="priceA" value="<%= todos.price %>" required>
                </div>
            </div>
              <div class="col-md-2 mb-3">
                <label for="validationDefault04">Promo Code</label>
                <input type="text" class="form-control" id="codeA" name="codeA" value="<%= todos.code %>" >
            </div>
              <div class="col-md-2 mb-3">
                <label for="validationDefault04">Discount</label>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-percent"></i></div>
                  </div>
                  <input type="number" class="form-control" id="percentA" name="percentA" value="<%= todos.percent %>" >
                </div>
            </div>
          </div>
              <div class="ce" style="margin-left: 150px;">
                <button type="submit" class="styleButton" style="cursor: pointer; margin: 10px 0px; width: 200px; ">Submit</button>
                <button type="button" id="resetBtn" style="cursor: pointer; margin: 10px 0px;width: 80px;">Reset</button>
              </div>

            </form>
